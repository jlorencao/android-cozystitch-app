<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/cards_and_bars">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="1">

        <View
            android:id="@+id/spacerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/pageTitle"
            />

        <TextView
            android:id="@+id/topBarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/home_icon_label"
            android:layout_weight="0.89"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/pageTitle"
            />

        <TextView
            android:id="@+id/addNewProjectIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_project_label"
            android:textColor="@color/icons_cardLabels"
            android:layout_weight="0.01"
            android:gravity="center"
            app:drawableTopCompat="@drawable/baseline_add_24"
            android:padding = "10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>